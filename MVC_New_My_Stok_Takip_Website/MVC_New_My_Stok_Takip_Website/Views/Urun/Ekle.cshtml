
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Yeni Ürün Ekleme Sayfasına Hoş Geldiniz</h2>
<br />
<div>
    <form class="form-group" method="post">
        <div>
            <label>Ürün Adı</label>
            <input type="text" class="form-control" name="URUNAD" required="" maxlength="15">
        </div>
        <div>
            <br />
            <label>Marka</label>
            <input type="text" class="form-control" name="MARKA" maxlength="20" placeholder="Buraya Marka Adını Giriniz....">
        </div>
        <div>
            <br />
            <label>Ürün Kategori</label>
            <input type="text" class="form-control" name="URUNKATEGORI">
        </div>
        <div>
            <br />
            <label>Fiyat</label>
            <input type="text" class="form-control" name="FIYAT" required="">
        </div>
        <div>
            <br />
            <label>Stok</label>
            <input type="text" class="form-control" name="STOK">
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Ürün Ekle</button>
    </form>
</div>
