<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>
        MVC Stok Takip Website
    </title>
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/web/plugins/fontawesome-free/css/all.min.css">
    <!-- IonIcons -->
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/web/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<!--
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to to the body tag
to get the desired effect
|---------------------------------------------------------|
|LAYOUT OPTIONS | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|
-->
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <br />
            <br />
            <a href="#" class="brand-link">
                <img src="~/web/dist/img/MVC.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light"><b>MVC Stok Takip</b></span>
            </a>
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="~/web/dist/img/2.png" class="img-circle elevation-2" alt="User Image" />
                </div>
                <div class="info">
                    <a href="/Kategori/Index" class="d-block">
                        <b>Hoş Geldiniz</b>
                    </a>
                </div>
            </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
                        <li class="nav-item has-treeview">
                            <a href="/Kategori/Index" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    <b>Kategori Sayfası</b>
                                </p>
                            </a>
                        </li>
                        <br />
                        <li class="nav-item has-icon">
                            <a href="/Musteri/Index" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    <b>Müşteri Sayfası</b>
                                </p>
                            </a>
                        </li>
                        <br />
                        <li class="nav-item has-feedback">
                            <a href="/Satis/Index" class="nav-link">
                                <i class="nav-icon fas fa-adjust"></i>
                                <p>
                                    <b>Satış Sayfası</b>
                                </p>
                            </a>
                        </li>
                        <br />
                        <li class="nav-item has-feedback">
                            <a href="/Urun/Index" class="nav-link">
                                <i class="nav-icon fas fa-cocktail"></i>
                                <p>
                                    <b>Ürün Sayfası</b>
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="content">
                <div class="container">
                    <br />
                    <br />
                    @RenderBody()
                </div>
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/web/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/web/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/web/dist/js/adminlte.js"></script>

    <!-- OPTIONAL SCRIPTS -->
    <script src="~/web/plugins/chart.js/Chart.min.js"></script>
    <script src="~/web/dist/js/demo.js"></script>
    <script src="~/web/dist/js/pages/dashboard3.js"></script>
</body>
</html>

